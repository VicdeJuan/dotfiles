#!/bin/bash

function update_dot_file {
	for i in $1; do
		rm ~/$i
		ln -s ~/.dotfiles/$i ~/.$i
	done
}

$files="zshrc tmux-conf vimrc vim dircolors"

# update conf files
update_dot_file($files)

#add keyboard layout if possible
cd ~/.dotfiles/KeyboardLayout
./push own


